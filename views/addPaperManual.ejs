<%- include('partials/header') %>
const PDFfile = require("../models/PDFfile.js");



<h1>Add A Paper Manually</h1>

<div class="adminForm">
    <form action="/addPaperManual" method="POST">
        <label for="title">Title</label> 
        <input type="text" id="title" name="title" placeholder="Input Article Title">

        <label for="authors">Authors</label> 
        <input type="text" id="authors" name="authors" placeholder="Input Authors e.g. Smith, AB, Jones, CD, etc"> 
        
        <label for="journal">Journal</label> 
        <input type="text" id="authors" name="journal" placeholder="Input Journal Name"> 

        <label for="year">Year</label> 
        <input type="number" id="year" name="year" placeholder="Input Year of Publication">

        <label for="volume">Volume</label> 
        <input type="number" id="volume" name="volume" placeholder="Input Volume of Journal"> 

        <label for="pages">Pages</label> 
        <input type="text" id="pages" name="pages" placeholder="Input Page Range of Article e.g. 21-35">

        <label for="doi">DOI</label> 
        <input type="text" id="doi" name="doi" placeholder="Input doi. Use format e.g. doi:10.1016/j.molcel.2017.11.001">     
        
        <label for="doi">PMID</label> 
        <input type="text" id="pmid" name="pmid" placeholder="Input PMID">

        <label for="type">Type</label> 
        <select id="type" name="type">
            <option>Primary Journal</option>
            <option>Review Journal</option>
            <option>Book Chapter</option>
            <option>Letter</option>
        </select>

        
        <button type="submit">Add a New Publication</button>
    </form>
    
</div>

<%- include('partials/footer') %>